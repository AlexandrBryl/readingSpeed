public class Author {
  public String name;
  public String sex;
  public int age;

  public Author(String name, String sex, int age) {
    this.name = name;
    this.sex = sex;
    this.age = age;
  }

  public String toString() {
    return "Автор: " + name + ", пол: " + sex + ", возраст: " + age + ".";
  }
}
